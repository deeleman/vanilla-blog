{
  "compilerOptions": {
    "lib": ["ES2017", "DOM"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "declaration": true,
    "esModuleInterop": true,
    "strict": true, 
    "types": ["jest"],
    "outDir": "./dist"
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "dist"
  ]
}
